<div class="container-fluid col-xs-12" style="font-size: 90%">

  <div class="row">
    {{> lobbycentral/menu }}
  </div>
  
  <div class="row">  </div>

  <h2 class="heading">
    <center>
      Users of LobbyCentral, Total {{listOfUsers.length}} in {{ pages }} pages. 
      Clike to <a href='/lobbycentral/users'>retrieve all users</a>, it will take about 30 seconds.
    </center>
  </h2>
 
  <div class="row">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          {{#each listOfUsers}}
          <tr class="">
            <td><strong>
              {{ this.userName}}
            </strong></td>
            <td>
              {{ this.fullName}}
            </td>
            <td>
              {{ this.email}}
            </td>
            <td>
              {{ this.status}}
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>